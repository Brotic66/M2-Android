<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="brotic.selfidefi_v1.Activity.MainActivity">


    <include layout="@layout/menu_top_hl" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:text="Authentification"
            android:textSize="30dp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E2E2E2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <EditText
            android:id="@+id/connexion_pseudo"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Pseudo"
            android:textColorHint="#fff"
            android:background="@drawable/button_connexion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/connexion_mdp"
            android:inputType="textPassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Mot de passe"
            android:textColorHint="#fff"
            android:background="@drawable/button_connexion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:singleLine="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/suivant_connexion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/suivant"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>


</LinearLayout>
